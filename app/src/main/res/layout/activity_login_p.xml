<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splashscreen"
    android:orientation="vertical"
    tools:context=".LoginP">


  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="144dp"
      android:layout_height="144dp"
      android:layout_gravity="center"
      android:layout_marginTop="60dp"
      android:src="@drawable/stayheal" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/montserrat_alternates_bold"
      android:text="Masuk"
      android:textSize="16sp" />

  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="301dp"
      android:layout_height="335dp"
      android:layout_gravity="center"
      android:layout_marginTop="15dp"
      android:background="@drawable/log">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="145dp"
        app:passwordToggleDrawable="@drawable/ic_baseline_remove_red_eye_24"
        app:passwordToggleEnabled="true">


      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/edtforpass1"
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:layout_marginBottom="86dp"
          android:background="@drawable/edt"
          android:ems="15"
          android:hint="Password"
          android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/edt"
        android:hint="Email"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="101dp"
        android:background="@drawable/btndefault"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:onClick="login"
        android:text="Masuk"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvDaftar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="34dp"
      android:layout_marginBottom="64dp"
      android:fontFamily="@font/montserrat_alternates_bold"
      android:text="@string/daftar"
        android:onClick="registo"
        android:clickable="true"
        android:textStyle="bold"
      android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLupaPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="163dp"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:onClick="gotpass"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="Lupa Password?"
        android:textSize="12sp" />


  </RelativeLayout>


</LinearLayout>